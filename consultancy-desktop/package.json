{
  "name": "consultancy-app",
  "version": "1.0.0",
  "main": "electron.cjs",
  "private": true,
  "type": "module",
  "scripts": {
    "react-dev": "vite",
    "electron-dev": "electron .",
    "dev": "concurrently \"npm run react-dev\" \"npm run electron-dev\"",
    "build": "vite build",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.consultancy.app",
    "productName": "ConsultancyApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**",
      "electron.cjs"
    ],
    "asar": true,
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}-portable.exe",
      "icon": "assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "database/",
        "to": "database/"
      }
    ]
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "ejs": "^3.1.9",
    "express": "^5.1.0",
    "extract-zip": "^2.0.1",
    "html5-qrcode": "^2.3.8",
    "ip": "^2.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pdf-parse": "^2.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.2.1",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^6.23.1",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^6.0.1",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.2",
    "electron": "^39.1.2",
    "electron-builder": "^24.13.3",
    "eslint": "^9.3.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^15.3.0",
    "vite": "^7.2.2"
  }
}
