{
  "name": "consultancy-app",
  "version": "1.0.0",
  "main": "electron.cjs",
  "private": true,
  "scripts": {
    "react-dev": "vite",
    "electron-dev": "electron .",
    "dev": "concurrently \"npm run react-dev\" \"npm run electron-dev\"",
    "build": "vite build && node fix-paths.cjs",
    "postinstall": "electron-builder install-app-deps",
    "package": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win nsis --x64",
    "build:portable": "npm run build && electron-builder --win portable --x64",
    "build:production": "npm run build && electron-builder --win nsis portable --x64"
  },
  "build": {
    "appId": "com.consultancy.app",
    "productName": "ConsultancyApp",
    "directories": {
      "output": "dist-electron",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs",
      "src-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/@ngrok/**/*",
      "node_modules/ngrok/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/bcrypt/**/*",
      "node_modules/puppeteer/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Consultancy App",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "license": "LICENSE.txt"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "extraResources": [
      {
        "from": "database/",
        "to": "database/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@ngrok/ngrok": "^1.7.0",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.5.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dompurify": "^3.3.1",
    "dropbox": "^10.34.0",
    "ejs": "^3.1.9",
    "express": "^5.1.0",
    "extract-zip": "^2.0.1",
    "form-data": "^4.0.5",
    "fs-extra": "^11.3.2",
    "googleapis": "^131.0.0",
    "html5-qrcode": "^2.3.8",
    "ip": "^2.0.1",
    "jimp": "^0.16.13",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.562.0",
    "mime": "^4.1.0",
    "multer": "^2.0.2",
    "node-machine-id": "^1.1.12",
    "nodemailer": "^7.0.10",
    "pdf-parse": "^2.4.5",
    "puppeteer": "^24.34.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.5.0",
    "react-pdf": "^10.2.0",
    "react-qr-code": "^2.0.18",
    "react-router-dom": "^6.23.1",
    "socket.io": "^4.8.2",
    "socket.io-client": "^4.8.2",
    "sqlite3": "^5.1.7",
    "temp-file": "^3.4.0",
    "tesseract.js": "^6.0.1",
    "twilio": "^5.11.1",
    "uuid": "^9.0.1",
    "whatsapp-web.js": "^1.34.2",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@esbuild/win32-x64": "^0.27.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.4",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-updater": "^6.6.2",
    "esbuild": "^0.27.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "rimraf": "^6.1.2",
    "vite": "^5.4.11"
  }
}
